<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lin_ge.restaurantadvisor">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.MainActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:exported="true"
            android:label="Search"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="Restaurants">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RestaurantActivity"
            android:label="Restaurant"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".ReviewActivity"
            android:label="Add Review"
            android:parentActivityName=".RestaurantActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.RestaurantActivity" />
        </activity>
        <activity android:name=".FoodListActivity"
            android:label="List Food"
            android:parentActivityName=".RestaurantActivity"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.RestaurantActivity" />
        </activity>
        <activity android:name=".FoodListViewActivity"
            android:label="See Food"
            android:exported="true">
            <meta-data
                android:value="lin_ge.restaurantadvisor.RestaurantActivity" />
        </activity>
    </application>

</manifest>