<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lin_ge.restaurantadvisor">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:exported="true"
            android:label="Search"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.activities.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activities.ReviewActivity"
            android:exported="true"
            android:label="Add Review"
            android:parentActivityName=".activities.RestaurantActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.activities.RestaurantActivity" />
        </activity>
        <activity
            android:name=".activities.FoodListActivity"
            android:exported="true"
            android:label="List Food"
            android:parentActivityName=".activities.RestaurantActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.activities.RestaurantActivity" />
        </activity>
        <activity
            android:name=".activities.FoodListViewActivity"
            android:exported="true"
            android:label="See Food">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lin_ge.restaurantadvisor.activities.RestaurantActivity" />
        </activity>
        <activity android:name=".activities.RestaurantActivity"></activity>
    </application>

</manifest>